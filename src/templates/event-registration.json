{
    "id": "event-registration",
    "title": "Event Registration",
    "description": "Register attendees for events and conferences",
    "category": "events",
    "schema": {
        "title": "Event Registration",
        "fields": [
            {
                "id": "attendee_name",
                "type": "text",
                "label": "Attendee Name",
                "required": true,
                "placeholder": "Full name"
            },
            {
                "id": "email",
                "type": "text",
                "label": "Email Address",
                "required": true,
                "placeholder": "your.email@example.com"
            },
            {
                "id": "phone",
                "type": "phone",
                "label": "Phone Number",
                "required": true,
                "placeholder": "Contact number"
            },
            {
                "id": "ticket_type",
                "type": "select",
                "label": "Ticket Type",
                "required": true,
                "options": [
                    "Early Bird",
                    "Regular",
                    "VIP",
                    "Student"
                ]
            },
            {
                "id": "dietary_restrictions",
                "type": "multiselect",
                "label": "Dietary Restrictions",
                "required": false,
                "options": [
                    "Vegetarian",
                    "Vegan",
                    "Gluten-Free",
                    "Nut Allergy",
                    "None"
                ]
            },
            {
                "id": "company",
                "type": "text",
                "label": "Company/Organization",
                "required": false,
                "placeholder": "Company name"
            },
            {
                "id": "special_requirements",
                "type": "textarea",
                "label": "Special Requirements",
                "required": false,
                "placeholder": "Any accessibility needs or special requests..."
            },
            {
                "id": "newsletter",
                "type": "toggle",
                "label": "Subscribe to event newsletter",
                "required": false
            }
        ],
        "theme": {
            "mode": "light",
            "light": {
                "primary": "#ec4899",
                "secondary": "#64748b",
                "accent": "#f59e0b",
                "error": "#ef4444",
                "success": "#22c55e",
                "text": "#0f172a",
                "background": "#ffffff"
            },
            "dark": {
                "primary": "#f472b6",
                "secondary": "#94a3b8",
                "accent": "#fbbf24",
                "error": "#f87171",
                "success": "#4ade80",
                "text": "#f1f5f9",
                "background": "#0f172a"
            }
        }
    }
}