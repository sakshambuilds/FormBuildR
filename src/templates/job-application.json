{
    "id": "job-application",
    "title": "Job Application",
    "description": "Comprehensive job application form with resume upload",
    "category": "hr",
    "schema": {
        "title": "Job Application Form",
        "fields": [
            {
                "id": "full_name",
                "type": "text",
                "label": "Full Name",
                "required": true,
                "placeholder": "Enter your full name"
            },
            {
                "id": "email",
                "type": "text",
                "label": "Email Address",
                "required": true,
                "placeholder": "your.email@example.com"
            },
            {
                "id": "phone",
                "type": "phone",
                "label": "Phone Number",
                "required": true,
                "placeholder": "Enter phone number"
            },
            {
                "id": "position",
                "type": "select",
                "label": "Position Applied For",
                "required": true,
                "options": [
                    "Software Engineer",
                    "Product Manager",
                    "Designer",
                    "Marketing Manager",
                    "Sales Representative"
                ]
            },
            {
                "id": "experience",
                "type": "select",
                "label": "Years of Experience",
                "required": true,
                "options": [
                    "0-1 years",
                    "1-3 years",
                    "3-5 years",
                    "5-10 years",
                    "10+ years"
                ]
            },
            {
                "id": "resume",
                "type": "file_upload",
                "label": "Upload Resume",
                "required": true,
                "accept": ".pdf,.doc,.docx",
                "max": 5
            },
            {
                "id": "cover_letter",
                "type": "textarea",
                "label": "Cover Letter",
                "required": false,
                "placeholder": "Tell us why you're a great fit..."
            },
            {
                "id": "available_start",
                "type": "datetime",
                "label": "Available Start Date",
                "required": false
            },
            {
                "id": "remote_work",
                "type": "toggle",
                "label": "Open to remote work",
                "required": false
            }
        ],
        "theme": {
            "mode": "light",
            "light": {
                "primary": "#6366f1",
                "secondary": "#64748b",
                "accent": "#8b5cf6",
                "error": "#ef4444",
                "success": "#22c55e",
                "text": "#0f172a",
                "background": "#ffffff"
            },
            "dark": {
                "primary": "#818cf8",
                "secondary": "#94a3b8",
                "accent": "#a78bfa",
                "error": "#f87171",
                "success": "#4ade80",
                "text": "#f1f5f9",
                "background": "#0f172a"
            }
        }
    }
}